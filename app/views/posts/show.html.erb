<div class="post-show">
  <div>
    <div class="post-info">
      <h2><%= @post.title %><span> by <%= @user.name %></span></h2>
      <p>Comments: <%= @comments.where("post_id = #{@post.id}").count %> â€¢ Likes: <%= @likes.where("post_id = #{@post.id}").count %></p>
    </div>
    <p><%= @post.text %></p>
  </div>
  <div>
    <% @comments.where("post_id = #{@post.id}").each do |comment| %>
      <p><%= @users.find(comment.author_id).name %>: <%= comment.text %></p>
    <% end %>
  </div>
</div>